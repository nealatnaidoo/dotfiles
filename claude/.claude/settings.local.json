{
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Task(*)",
      "Bash(*:*)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch(domain:*)",
      "WebSearch"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/.env*)",
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf ~/*:*)",
      "Bash(rm -rf /:*)",
      "Bash(sudo rm:*)",
      "Bash(chmod 777:*)",
      "Bash(> /dev/sd*:*)",
      "Bash(dd if=*of=/dev/*:*)",
      "Write(~/.ssh/**)",
      "Write(~/.aws/**)",
      "Write(~/.config/gh/**)",
      "Edit(~/.ssh/**)",
      "Edit(~/.aws/**)",
      "Edit(~/.config/gh/**)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/startup_check.py"
          },
          {
            "type": "command",
            "command": "/Users/naidooone/Developer/projects/agentic_hud/.venv/bin/agentic_hud check -q || (/Users/naidooone/Developer/projects/agentic_hud/.venv/bin/agentic_hud start > /dev/null 2>&1 &)"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/manage_deploy_gate.py"
          }
        ]
      },
      {
        "matcher": "backend-coding-agent|frontend-coding-agent",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verify_ba_artifacts.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verify_phase_transition.py"
          }
        ]
      },
      {
        "matcher": "business-analyst",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verify_devops_approval.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verify_phase_transition.py"
          }
        ]
      },
      {
        "matcher": "qa-reviewer",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verify_evidence_exists.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verify_phase_transition.py"
          }
        ]
      },
      {
        "matcher": "solution-designer|persona-evaluator|code-review-agent",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verify_phase_transition.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/block_deployment.py"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/protect_deploy_gate.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/verify_manifest_updated.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/save_manifest_state.py"
          }
        ]
      }
    ]
  }
}
